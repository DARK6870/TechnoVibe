@model TechnoVibe.Pages.Admin.ProductCategoryes.Models.NewPC

@{
    ViewData["Title"] = "Create";
}
<div style="margin-left: 2%;">
<h1>Create Product category</h1>
<div class="">
    <div class="col-md-4">
        <form asp-action="CreatePC">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label"></label>
                    <select style="width: 330px;" required class="form-select border border-secondary" id="ProductId" onchange="updateInputValue(this, 'CT')">
                        <option value=""></option>
                        @foreach (var item in Model.Products)
                        {
                            <option value="@item.ProductId">@item.ProductName</option>
                        }
                    </select>
                    <input type="text" hidden class="w-100" id="CT" required name="ProductId">
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select style="width: 330px;" required class="form-select border border-secondary" id="CategoryId" onchange="updateInputValue(this, 'ST')">
                        <option value=""></option>
                        @foreach (var item in Model.Categories)
                        {
                            <option value="@item.CategoryId">@item.CategoryName</option>
                        }
                    </select>
                    <input type="text" hidden class="w-100" id="ST" required name="CategoryId">
                </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary mt-2" asp-action="IndexPC">Back to List</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    function updateInputValue(selectElement, inputId) {
        var inputElement = document.getElementById(inputId);
        var selectedOption = selectElement.options[selectElement.selectedIndex];
        inputElement.value = selectedOption.value;
    }
</script>