@model IEnumerable<TechnoVibe.Entity.Support>

@{
    ViewData["Title"] = "Index";
}

<style>
    .card {
        border: 1px solid #ccc;
        margin: 10px;
        padding: 10px;
        border-radius: 5px;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .card {
        display: flex;
        justify-content: space-between;
    }

    .card:hover {
        transform: none;
    }

    .card-container {
        width: 100%;
        max-width: 900px;
        min-width: 200px;
        margin-left: 1%;
    }

</style>
<h1 style="margin-left: 2%;">All problems</h1>
<div class="card-container">
    @foreach (var item in Model) {
        <div class="card">
            <div>
                <strong>Email:</strong> @Html.DisplayFor(modelItem => item.Email)<br />
                <strong>Problem:</strong> @Html.DisplayFor(modelItem => item.Problem)<br />
                <strong>Problem Description:</strong> @Html.DisplayFor(modelItem => item.ProblemDescription)
            </div>
            <form action="@Url.Action("DeleteSupport", "Supports", new { id = item.SupportId })" onsubmit="return confirm('Are you sure you want to delete this item?')">
                <button type="submit" class="btn btn-danger mt-4">Delete</button>
            </form>
        </div>
    }
</div>
