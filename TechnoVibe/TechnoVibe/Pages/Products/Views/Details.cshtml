        filter: invert(70%) sepia(70%) saturate(0%) hue-rotate(190deg) brightness(1.5);
    }

    .carousel-control-next-icon {
        filter: invert(70%) sepia(70%) saturate(0%) hue-rotate(10deg) brightness(1.5);
